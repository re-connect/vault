<section class="py-5" aria-labelledby="section-title">
    <div class="container">
        <h2 id="section-title" class="h2 text-primary text-uppercase text-center">{{ section_title| trans }}</h2>
        <div class="row justify-content-between pt-3 pt-md-4 pb-3">
            {% for item in product_is %}
                <article class="offset-1 col-10 offset-md-0 col-md-3 px-5 text-primary my-4 text-center" aria-labelledby="title-{{ loop.index }}">
                    {% set icon_path = 'build/images/home/' ~ item.icon_file_name %}
                    <img class="mx-auto d-block pb-2 product-is-icon" src="{{ asset(icon_path) }}"
                         alt="{{ item.icon_alt|trans }}"
                         loading="lazy"
                         aria-describedby="desc-{{ loop.index }}">
                    <h5 id="title-{{ loop.index }}" class="py-3">{{ item.title |trans }}</h5>
                    <p class="font-size-1-1" id="desc-{{ loop.index }}">
                        {% if item.annexe_name is defined %}
                            {{ item.text|trans({'%link%': path('re_admin_annexe', { url: item.annexe_name })})|raw }}
                        {% else %}
                            {{ item.text|trans }}
                        {% endif %}
                    </p>
                </article>
            {% endfor %}
        </div>
    </div>
</section>