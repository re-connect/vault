        <div class="row align-items-center">
            <div class="col-12 col-md-8 offset-md-2 offset-lg-0 col-lg-8 text-center mb-4 mt-lg-3 pt-lg-2">
                <h2 class="h2 text-primary mt-5">{{ 'contact_us_title'| trans }}</h2>
                <h3 class="h3 text-white pt-1 mb-0">{{ 'subscribe_newsletter'|trans }}</h3>
                <iframe title="{{ 'subscribe_newsletter'|trans }}" width="650" height="800" loading="lazy"
                        src="https://a2c14f23.sibforms.com/serve/MUIFAMwEJoD3uTrZmKxamMQ1UJUiCEJPetzleDfEt16C2mRW-cvYdgtoZiTFv7e68ejP12XR4KmWPeMGpN1YJK2NoigK-0Rpg-c9d2M4-rybbzcZVFjKHUfEjQceClYKXydocOhvwDIvwT9BS-WXmZaXEM_NTMP0xY-OqgXiJ-t43USDrjL7j38LXdpg7UP3_vV9YwFcXJvZurdp"
                        allowfullscreen style="margin-left: auto;margin-right: auto;max-width: 100%;">
                </iframe>
            </div>
            <div class="col-12 col-md-8 offset-md-2 col-lg-4 offset-lg-0 text-center">
                {% set logo_path = 'build/images/home/' ~ logo_file_name %}
                <img class="img-fluid w-75 my-3" loading="lazy"
                     src="{{ asset(logo_path) }}"
                     alt="{{ logo_alt| trans }}">
                <div class="my-4 my-md-0 mt-2">
                    <a class="btn btn-primary py-2 px-lg-5 px-3 rounded-pill font-size-1-2"
                       href="{{ path('re_main_contactV2') }}"
                       aria-label="{{ 'contact_us_button'|trans }}">
                        {{ 'contact_us_button'| trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>