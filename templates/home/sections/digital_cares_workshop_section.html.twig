<section class="{{ direction == 'row' ? 'bg-light-yellow' : '' }} py-2 py-md-5 px-4 px-md-0">
    <div class="container py-3">
        <div class="row text-primary flex-{{ direction }}">
            <div class="col-12 {{ direction == 'row-reverse' ? 'offset-md-2' : '' }} col-md-5 p-3 d-flex flex-column justify-content-center">
                <h2 class="h2 text-uppercase pb-2">{{ feature.title|trans }}</h2>
                <p class="pt-2">
                {% if feature.annexe_name is defined %}
                    {{ feature.text|trans({'%url%': path('re_admin_annexe', { url: feature.annexe_name}) })|raw }}
                {% else %}
                    {{ feature.text|trans }}
                {% endif %}
                </p>
            </div>
            <div class="col-12 {{ direction == 'row-reverse' ? '' : 'offset-md-2' }} col-md-5 text-center my-auto">
                {% set img_path = 'build/images/home/'~ feature.img_fileName %}
                <img class="{{ feature.is_mobile ? 'feature-transmission-mockup' : 'w-100 border-radius-20' }} border-radius-20 box-shadow-light-yellow"
                     src="{{ asset(img_path) }}" alt="{{ feature.img_alt|trans }}">
            </div>
        </div>
    </div>
</section>
