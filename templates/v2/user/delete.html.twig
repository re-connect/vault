{% extends 'v2/user/settings.html.twig' %}

{% block metaTitle %}{{ 'user_settings'|trans }}{% endblock metaTitle %}

{% block content %}
    <div class="text-center text-primary col-md-6 m-auto my-3 card rounded-card p-4 shadow">
        <i class="fas fa-exclamation-triangle fa-3x"></i>
        <h3 class="text-center my-3">{{ 'beneficiary_delete_account'|trans }}</h3>
        <p>{{ 'all_your_data_will_be_deleted'|trans }}</p>
        <div class="row col-sm-6 m-auto">
            {{ form_start(form) }}
            {{ include('v2/common/_form_actions.html.twig', {
                buttonText: 'delete'|trans,
                buttonColor: 'red',
                backPath: path('user_settings'),
            }) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
