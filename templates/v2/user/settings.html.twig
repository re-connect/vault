{% extends 'v2/management_layout.html.twig' %}
{% block metaTitle %}{{ 'user_settings'|trans }}{% endblock metaTitle %}

{% block subTitle %}{{ 'user_parameters_subtitle'|trans({'%subject%' : app.user.fullName})|upper }}{% endblock %}
{% block subTitleIconName %}user-plus{% endblock %}

{% block content %}
    <div class="container w-75 justify-content-center">
        <h4 class="text-center rounded border-primary text-primary py-2">{{ 'username'|trans }} : <span class="text-{{ getUserThemeColor() }}">{{ user.username }}</span></h4>
        {{ include('v2/user/_user_settings_form.html.twig', {form: userForm}) }}
    </div>
    <div class="text-primary pb-2 row mt-4">
        <div class="col pt-2">
            <i class="fas fa-lock font-size-1-3"></i>
            <span class="font-size-1-3 bold uppercase">
            &nbsp; {{ 'update_your_password'|trans }}
            </span>
        </div>
    </div>
    <hr class="bg-primary my-0 hr-2">
    <div class="container w-75 justify-content-center my-4">
        {{ include('v2/user/change_password_form.html.twig', {askCurrentPassword: true, passwordForm}) }}
    </div>
    {% if app.user.isBeneficiaire %}
        <div class="d-flex flex-column align-items-center mt-3 mb-5 font-size-1">
            <a href="{{ path('request_personal_account_data') }}" class="text-green mt-2">
                {{ 'take_away_account_data'|trans }}
            </a>
            <a href="{{ path('user_delete') }}" class="text-primary mt-2">
                {{ 'delete_your_account'|trans }}
            </a>
        </div>
    {% endif %}
{% endblock %}
