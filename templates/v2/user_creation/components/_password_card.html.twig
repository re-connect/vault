{% extends 'v2/common/_card_with_form.html.twig' %}

{% block customContent %}
    <div class="text-start">
        {% for field in form %}
            {#          The 'plainPassword' field name is only used when creating a professionnal #}
            {% if field.vars.name == 'password' %}
                {{ include('v2/user/strong_password/_strong_password_row.html.twig', {
                    'field': form.password,
                    'isBeneficiaire': true,
                    'hideAndShow': false,
                    'generatePassword': true,
                }) }}
            {% else %}
                {{ form_row(field) }}
            {% endif %}
        {% endfor %}
        {{ include('v2/common/_form_actions.html.twig') }}
    </div>
{% endblock %}
