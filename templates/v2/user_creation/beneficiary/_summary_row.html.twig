{% set step = row.step is defined ? row.step : constant('App\\Entity\\BeneficiaryCreationProcess::IDENTITY_STEP') %}
<ul class="list-group">
    <li class="row">
        <div class="col-3 mt-2 bold">
            {{ row.name|trans }}
        </div>
        <div class="col-7 mt-2">
            {% if row.value is iterable %}
                {% for val in row.value %}
                    {{ val.nom }}
                    <br>
                {% endfor %}
            {% else %}
                {{ row.value }}
            {% endif %}
        </div>
        {% if row.readonly is not defined %}
            <div class="col-2 mt-2 text-end">
                <a href="{{ row.editPath is defined ? row.editPath : path('create_beneficiary', {step, id: beneficiaryCreationProcess.id}) }}" data-turbo="false">
                    <i class="fas fa-pencil-alt text-primary"></i>
                </a>
            </div>
        {% endif %}
    </li>
</ul>
