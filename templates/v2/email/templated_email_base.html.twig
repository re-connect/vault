{% apply inky_to_html|inline_css(source('@appV2styles/foundation-email.css'), source('@appV2styles/email.css')) %}
    <container>
        {{ include('v2/email/_header.html.twig')|inky_to_html }}
        <spacer size="50"></spacer>
        <row>
            <columns>
                {% block content %}{% endblock %}
            </columns>
        </row>
        <spacer size="50"></spacer>
        <row>
            <columns>
                <center>
                    {% block link %}{% endblock %}
                </center>
            </columns>
        </row>
        <spacer size="30"></spacer>
        {{ include('v2/email/_translation_links.html.twig', {userLang, translationRoute})|inky_to_html }}
        {% block confidentialitySection %}{% endblock %}
        <spacer size="30"></spacer>
        {{ include('v2/email/_footer.html.twig', {userLang, year})|inky_to_html }}
    </container>
{% endapply %}
