<div class="col-md-4 col-lg-3 mb-4"
        {{ stimulus_controller('ajax-alert', {
            'url': path('disaffiliate_user', {'id': user.id, 'relayId': relay.id}),
            'message': 'remove_from_relay_confirm_relay'|trans({
                '%user%': user.fullName,
                '%relay%': relay.nom
            }),
            'confirmButtonText': 'remove_from_relay'|trans,
            'cancelButtonText': 'cancel'|trans,
            'updatedButtonMessage': 'removed_from_relay'|trans,
            'disableFiredButton': true,
        }) }}
>
    <div class="card shadow h-100">
        <h5 class="card-header p-3 text-center bg-primary text-white">{{ relay.nom }}</h5>
        <div class="card-body flex-column d-flex justify-content-between">
            <div class="row mt-3 text-start pb-4 h-100 d-flex justify-content-center align-items-center ">
                <div class="col-12 col-md-3 text-center">
                    <i class="fa fa-hotel fa-2x text-primary mt-2" aria-hidden="true" {{ stimulus_target('ajax-alert', 'icon') }}></i>
                </div>
                <div class="col-12 col-md-9 mt-4 mt-md-0 pt-2 text-center">
                    {{ include('v2/vault/relay/_address_column.html.twig', {relay}) }}
                </div>
            </div>
            <button class="btn btn-red text-white" {{ stimulus_action('ajax-alert', 'alert') }}>
                {{ 'remove_from_relay'|trans }}
            </button>
        </div>
    </div>
</div>
