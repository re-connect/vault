<table class="table table-100 spaced-table mb-0 h-100 bg-white">
    <tbody>
    {% for beneficiary in beneficiaries %}
        <tr class="text-primary align-middle bg-white">
            <td class="border-0 p-0 h-100 text-start">
                <i class="fas fa-user fa-3x text-primary"></i>
            </td>
            <td class="border-0 h-100 text-start">
                <span>{{ beneficiary.user.prenom|capitalize }} {{ beneficiary.user.nom|upper }}</span>
                <br>
                <span class="text-grey">{{ beneficiary.user.username }}</span>
            </td>
            <td class="border-0 h-100 text-end" {{ stimulus_controller('dropdown-menu') }}>
                {{ include('v2/professional/_action_dropdown.html.twig', {
                    'removeFromRelayPath': path('re_membre_arreterSuiviBeneficiaire', {'id': beneficiary.id}),
                    'resetPasswordPath': path('private_reset_password', {'id': beneficiary.user.id}),
                }) }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
