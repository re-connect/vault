{% extends 'v2/vault/standard_layout.html.twig' %}

{% block content %}
    <div class="container row mx-auto my-4">
        <div class="col-12 col-lg-4 offset-lg-4 text-primary bg-white rounded py-2 shadow">
            <h4 class="font-size-1-3 text-center mt-1">
                <i class="fa fa-folder-open me-2" aria-hidden="true"></i>{{ 'move'|trans }}
            </h4>
            <hr class="text-light-grey">
            <div class="mb-2">
                <a href="{{ path(
                    element is instanceof ('App\\Entity\\Document')
                    ? 'document_move_to_folder'
                    : 'folder_move_to_folder',
                    {'id': element.id, 'tree-view': true}
                ) }}"
                   class="btn {{ getUserButtonColor() }} text-white text-center w-100"
                >
                    <i class="fa fa-folder-open me-2" aria-hidden="true"></i>{{ 'my_documents'|trans }}
                </a>
                <ul class="list-group tree-list">
                    {{ include('v2/vault/folder/_tree_view_item.html.twig', {folders, element}) }}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
