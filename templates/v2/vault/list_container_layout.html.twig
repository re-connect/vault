{% extends 'v2/vault/standard_layout.html.twig' %}

{% block content %}
    <div class="max-width-lg px-3 m-auto">
        <div class="row mt-4 mx-1">
            <div class="col-5 col-sm-3 col-lg-2 px-0">
                {{ include('v2/vault/components/_search_input.html.twig') }}
            </div>
            <div class="col text-end px-0 mb-2">
                {% block actionButtons %}{% endblock %}
            </div>
            <hr class="text-primary hr-2 mb-2">
        </div>
        <div class="max-width-md mx-auto">
            {% block list %}{% endblock %}
        </div>
    </div>
{% endblock %}

{% block notifications %}
    {{ parent() }}
    {% set beneficiary = beneficiary is defined ? beneficiary : null %}
    {{ render(controller('App\\ControllerV2\\MemberBeneficiaryController::firstMemberVisitNotification', {beneficiary})) }}
{% endblock %}
