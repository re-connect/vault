{% extends 'v2/vault/standard_layout.html.twig' %}

{% block content %}
    <div class="max-width-lg mt-4 m-auto text-primary">
        <div class="row ms-3">
            {{ form_start(form) }}
            <h1 class="font-size-1-3 bold">{{ "leave_center_title"|trans({"%s" : relay.nom}) }}</h1>
            <p class="text-primary font-size-1-3 my-3">{{ 'leave_center_confirm'|trans }}</p>
            <div>
                <a href="{{ path('my_relays') }}" class="btn btn-primary text-white text-center mt-2 col mx-1">
                    <i class="fa fa-times text-white me-1"></i>
                    {{ 'no'|trans }}
                </a>
                <button type="submit" class="btn btn-green text-white text-center mt-2 col mx-1">
                    <i class="fa fa-check text-white me-1"></i>
                    {{ 'yes'|trans }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
