<table class="table table-100 table-hover spaced-table mb-0 h-100">
    <thead>
    <tr class="text-primary text-center font-size-1-3">
        <th class="bg-grey borderless">{{ 'name'|trans }}</th>
        <th class="bg-grey borderless">{{ 'firstname'|trans }}</th>
        <th class="bg-grey borderless d-none d-lg-table-cell">{{ 'phone'|trans }}</th>
        <th class="bg-grey borderless d-none d-lg-table-cell">{{ 'email'|trans }}</th>
        {% if app.user.isBeneficiaire %}
            <th class="bg-grey borderless">{{ 'access'|trans }}</th>
        {% endif %}
        <th class="bg-grey borderless">{{ 'actions'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for contact in contacts %}
        {{ include('v2/vault/contact/_card.html.twig', {contact}) }}
    {% endfor %}
    </tbody>
</table>
<hr class="text-primary">
<div class="d-flex justify-content-end">
    {{ knp_pagination_render(contacts) }}
</div>
