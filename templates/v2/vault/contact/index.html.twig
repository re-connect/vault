{% extends 'v2/vault/list_container_layout.html.twig' %}

{% block metaTitle %}{{ 'contact'|trans }}{% endblock metaTitle %}

{% block list %}
    <div class="list-container d-flex flex-column justify-content-center">
        {{ contacts is not empty
        ? include('v2/vault/contact/_list.html.twig', {contacts})
        : include('v2/vault/components/_empty_list_content.html.twig', {'message': 'no_contact_yet'|trans}) }}
    </div>
{% endblock %}

{% block actionButtons %}
    {{ include('v2/vault/components/_create_personal_data_button.html.twig', {'path' : path('create_contact', {'id': beneficiary.id})}) }}
{% endblock %}
