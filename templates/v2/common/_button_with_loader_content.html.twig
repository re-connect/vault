<span {{ stimulus_target('loader', 'content') }}>
    {% if icon %}
        <i class="fa fa-{{ icon }} text-white"></i>
    {% else %}
        {{ text }}
    {% endif %}
</span>
<span
    {{ stimulus_target('loader', 'loadingContent') }}
    class="spinner-border d-none-not-important {{ spinnerColor }}"
    style="width: 1rem; height: 1rem;"
    role="status"
    style="display: none !important;"
>
    <span class="sr-only">Loading...</span>
</span>
