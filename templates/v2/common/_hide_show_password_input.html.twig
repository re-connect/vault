{% extends 'v2/user/strong_password/_password_strength_widget.html.twig' %}

{% block field %}
    <div class="{{ hideAndShow ? 'input-group' : '' }}" {{ stimulus_controller('hide-show-password') }}>
        {% if field.first is defined %}
            <div class="row">
                {{ form_row(field.first, {'attr': {'data-hide-show-password-target' : 'input'}}) }}
                {{ form_row(field.second, {'attr': {'data-hide-show-password-target' : 'input'}}) }}
            </div>
        {% else %}
            {{ form_widget(field, {'attr': {'data-hide-show-password-target' : 'input'}}) }}
        {% endif %}

        {% if hideAndShow %}
            <div class="input-group-append">
                <a class="input-group-text d-block btn btn-block bg-light-grey" data-action="click->hide-show-password#toggle">
                    <i class="fa fa-eye-slash text-primary" data-hide-show-password-target="icon"></i>
                </a>
            </div>
        {% endif %}
        <span class="text-danger">{{ form_errors(field) }}</span>
    </div>
{% endblock %}
