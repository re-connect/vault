{% extends 'v2/common/_card.html.twig' %}

{% block customContent %}
    <div class="text-start">
        {{ form_start(form) }}
        <div class="row">
            {% for field in form %}
                {{ form_row(field) }}
                {{ form_errors(field) }}
            {% endfor %}
        </div>
        <div class="text-end">
            {{ include('v2/common/_button.html.twig', {message: buttonText, color: 'outline-primary'}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
