{% extends 'v2/common/_layout.html.twig' %}
{% block metaTitle %}{{ 'membre.ajoutBeneficiaire.metaTitle'|trans }}{% endblock metaTitle %}
{% block title %}{{ 'add_new_benef_big_title'|trans|raw }}{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container text-primary mx-auto {{ getUserBackgroundColor() }}">
        <div class="max-width-lg mx-auto row">
            <div class="col-8 px-0 mt-3">
                <i class="fas fa-user-plus fa-lg me-1"></i>
                <span class="font-size-1-3 bold">{{ 'add_new_benef'|trans|upper }}</span>
            </div>
            <div class="col text-end pe-0 mt-4 mt-md-2">
                <a href="{{ path('re_user_redirectUser') }}"
                   class="btn {{ getUserButtonColor() }} text-white">
                    {{ 'back_home'|trans }}
                </a>
            </div>
            <hr class="hr-2 mt-2 bg-primary mx-auto">
            <div class="row mt-4 mx-auto">
                <div class="col-md-6">
                    <h4 class="text-blue bold text-center">{{ 'benef_has_account'|trans }}</h4>
                </div>
                <div class="col-md-6">
                    <h4 class="text-blue bold text-center">{{ 'benef_has_no_account'|trans }}</h4>
                    <div class="row mt-3 mt-lg-5">
                        <div class="col-md-6 text-center">
                            <span>{{ 'membre.ajoutBeneficiaire.creerCompte.default.description'|trans }}</span>
                            <a href="#" class="btn btn-blue text-white mt-3 mt-lg-4">
                                {{ 'membre.ajoutBeneficiaire.creerCompte'|trans }}
                                {{ 'membre.ajoutBeneficiaire.creerCompte.subTitle'|trans }}
                            </a>
                        </div>
                        <div class="col-md-6 text-center mt-5 mt-md-0">
                            <span>{{ 'membre.ajoutBeneficiaire.creerCompte.remotely.description1'|trans }}</span>
                            <a href="#" class="btn btn-blue text-white mt-3 mt-lg-4">
                                {{ 'membre.ajoutBeneficiaire.creerCompte'|trans }}
                                {{ 'membre.ajoutBeneficiaire.creerCompte.subTitle.remotely'|trans }}
                            </a>
                            <div class="row mt-3 text-start">
                                <div class="col-1">
                                    <i class="fa fa-mobile-alt fa-2x text-primary mt-2" aria-hidden="true"></i>
                                </div>
                                <div class="col ms-2">
                                    <small class="text-start">{{ 'membre.ajoutBeneficiaire.creerCompte.remotely.description2'|trans }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
