{% extends 'v2/management_layout.html.twig' %}
{% block metaTitle %}{{ 'choose_user'|trans }}{% endblock %}
{% block delimiter %}{% endblock %}
{% block subTitleIcon %}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2 mt-2" {{ stimulus_controller('ajax-search', {url: path('search_pro')}) }}>
            {{ form_start(form) }}
            {{ form_widget(form.search, {attr: {
                class: '',
                'data-ajax-search-target' : 'input',
                'data-action' : 'ajax-search#search',
            }}) }}
            {{ form_end(form) }}
            <div class="mt-3" {{ stimulus_target('ajax-search', 'results') }}>
                {{ include('v2/pro/create/_search_results_card.html.twig', {pros}) }}
            </div>
        </div>
    </div>
{% endblock %}
