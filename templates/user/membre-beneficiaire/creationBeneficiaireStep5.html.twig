{% extends 'user/membre-beneficiaire/creationUser_gestionUser_base.html.twig' %}

{% block addUserSubtitle %}
    {{ 'create_new_benef_step5'|trans({'%step%': 5, '%totalSteps%': 6})|raw }}
{% endblock addUserSubtitle %}

{% block creation_addUserContent %}
    <div class="row">
        <div class="col-sm-6 col-xs-12 text-primary font-size-1">
            <div class="row mt-1 pb-2">
                <div class="col-sm-3 col-xs-3">
                    <span>{{ 'firstname'|trans }}</span>
                </div>
                <div class="col-sm-7 col-xs-7 text-break">
                    {{ beneficiaire.user.prenom }}
                </div>
                <div class="col-sm-2 col-xs-2">
                    <a href="{{ path('reset_beneficiary_creation') }}">
                        <i class="fas fa-pencil-alt text-primary" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <div class="row mt-1 pb-2">
                <div class="col-sm-3 col-xs-3">
                    <span>{{ 'name'|trans }}</span>
                </div>
                <div class="col-sm-7 col-xs-7 text-break">
                    {{ beneficiaire.user.nom }}
                </div>
                <div class="col-sm-2 col-xs-2">
                    <a href="{{ path('reset_beneficiary_creation') }}">
                        <i class="fas fa-pencil-alt text-primary" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <div class="row mt-1 pb-2">
                <div class="col-sm-3 col-xs-3">
                    <span>{{ 'phone'|trans }}</span>
                </div>
                <div class="col-sm-7 col-xs-7">
                    {{ beneficiaire.user.telephone }}
                </div>
                <div class="col-sm-2 col-xs-2">
                    <a href="{{ path('reset_beneficiary_creation') }}">
                        <i class="fas fa-pencil-alt text-primary" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <div class="row mt-1 pb-2">
                <div class="col-sm-3 col-xs-3">
                    <span>{{ 'email'|trans }}</span>
                </div>
                <div class="col-sm-7 col-xs-7">
                    {{ beneficiaire.user.email }}
                </div>
                <div class="col-sm-2 col-xs-2">
                    <a href="{{ path('reset_beneficiary_creation') }}">
                        <i class="fas fa-pencil-alt text-primary" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <div class="row mt-1 pb-2">
                <div class="col-sm-3 col-xs-3">
                    <span>{{ 'reconnect_center'|trans }}</span>
                </div>
                <div class="col-sm-7 col-xs-7 text-break">
                    {% for benefCentre in beneficiaire.beneficiairesCentres %}
                        {{ benefCentre.centre.nom }}
                        {% if not loop.last %}<br/>{% endif %}
                    {% endfor %}
                </div>
                <div class="col-sm-2 col-xs-2">
                    <a href="{{ path('creationBeneficiaireStep4') }}">
                        <i class="fas fa-pencil-alt text-primary" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xs-12 text-primary font-size-1">
            <div class="row mt-1 pb-2">
                <div class="col-sm-4 col-xs-3">
                    <span>{{ 'username'|trans }}</span>
                </div>
                <div class="col-sm-8 col-xs-9 text-break">
                    {{ beneficiaire.user.username }}
                </div>
            </div>
            <div class="row mt-1 pb-2">
                <div class="col-sm-4 col-xs-3">
                    <span>{{ 'password'|trans }}</span>
                </div>
                <div class="col-sm-6 col-xs-7 text-break">
                    {{ app.session.get('autoPassword') }}
                </div>
                <div class="col-sm-2 col-xs-2">
                    <a href="{{ path('creationBeneficiaireStep2') }}">
                        <i class="fas fa-pencil-alt text-primary" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <div class="row mt-1 pb-2">
                <div class="col-sm-4 col-xs-3">
                    <span>{{ 'secret_question'|trans }}</span>
                </div>
                <div class="col-sm-6 col-xs-7 text-break">
                    {{ beneficiaire.questionSecrete|trans }}
                </div>
                <div class="col-sm-2 col-xs-2">
                    <a href="{{ path('creationBeneficiaireStep3') }}">
                        <i class="fas fa-pencil-alt text-primary" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <div class="row mt-1 pb-2">
                <div class="col-sm-4 col-xs-3">
                    <span>{{ 'secret_answer'|trans }}</span>
                </div>
                <div class="col-sm-6 col-xs-7 text-break">
                    {{ beneficiaire.reponseSecrete }}
                </div>
                <div class="col-sm-2 col-xs-2">
                    <a href="{{ path('creationBeneficiaireStep3') }}">
                        <i class="fas fa-pencil-alt text-primary" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock creation_addUserContent %}

{% block bottomLinks %}
    <div class="row">
        <div class="col-sm-2 col-sm-offset-4 col-xs-4 col-xs-offset-2">
            <a href="{{ path('creationBeneficiaireStep4') }}"
               class="btn btn-dark-blue font-size-1">{% trans %}main.retour{% endtrans %}</a>
        </div>
        <div class="col-sm-2 col-xs-4">
            {{ form_widget(form.submit, {'attr': {'class': 'btn-blue font-size-1'}}) }}
        </div>
    </div>
{% endblock bottomLinks %}

{% block mainDiv_creation_addUserContent %}
<div style="margin: auto;">
    {% endblock mainDiv_creation_addUserContent %}
